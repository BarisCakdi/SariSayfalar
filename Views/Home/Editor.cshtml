@model List<Urun>

<div class="container px-4 text-center">
    <div class="row gx-5">
        @foreach (var urun in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="@urun.Img" alt="@urun.Ad" class="card-img-top img-fluid" style="max-width: 325px; height: 200px;">
                    <div class="card-body mb-2">
                        <form method="post" action="/Home/UrunGuncelle">
                            <input type="hidden" name="Ad" value="@urun.Ad">
                            <input type="text" class="form-control mb-2" value="@urun.Ad" placeholder="Ürün Adı" readonly>
                            <input type="number" class="form-control mb-2" name="Fiyat" value="@urun.Fiyat" placeholder="Fiyat">
                            <input type="url" class="form-control" name="Img" value="@urun.Img" placeholder="Url Görsel">
                            <input type="date" name="Tarih" value="@urun.Tarih.ToString("yyyy.MM.dd")" placeholder="Tarih">
                            <div class="card-footer mt-2">
                                <p><button type="submit" class="btn btn-primary">Güncelle</button></p>
                            </div>
                        </form>
                        <form method="post" action="/Home/UrunSil">
                            <input type="hidden" name="Ad" value="@urun.Ad">
                            <div class="card-footer mt-2">
                                <p><button type="submit" class="btn btn-primary">Sil</button></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<hr />
   

<div class="container px-4 text-center">
    <h3>Yeni Ürün Ekle</h3>
    <!-- ürün form -->
    <form class="row g-3 mb-1" method="post" action="/Home/UrunEkle">
        <div class="col-sm-3">
            <input type="text" class="form-control" name="Ad" placeholder="Ürün Adı">
        </div>
        <div class="col-sm-2">
            <input type="number" class="form-control" name="Fiyat" placeholder="Fiyat">
        </div>
        <div class="col-sm-5">
            <input type="url" class="form-control" name="Img" placeholder="Url formatı">
        </div>
        <div class="col-sm-2 align-self-end">
            <button class="btn btn-primary">Ekle</button>
        </div>
        <div class="col-sm-2">
            <input type="text" class="form-control" name="Slug" placeholder="Slug">
        </div>
    </form>
    <!-- ürün form bitiş -->
    @ViewData["Hata"]
</div>

   
